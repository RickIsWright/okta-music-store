@model List<Mvc4MusicStore.Models.Album>
@{
    ViewBag.Title = "ASP.NET MVC Music Store";
}
<div id="promotion">
</div>
<h4>Fresh off the grill</h4>
<ul id="album-list">
    @foreach (var album in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Store",
                new { id = album.AlbumId })">
                <img alt="@album.Title" class="album" src="~/Content/Images/record-small.png" />
                <span>@album.Title</span>
            </a>
        </li>
    }
</ul>