@model IEnumerable<string>

@{
    ViewBag.Title = "Manage Groups";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Group Name
        </th>
        <th></th>
    </tr>
    @foreach (var groupName in Model)
    {
        <tr>
            <td>
                @groupName
            </td>
            <td>
                @Html.ActionLink("Members", "Details", new { groupName = groupName }) |
                @Html.ActionLink("Delete", "Delete", new { groupName=groupName })
            </td>
        </tr>
    }

</table>

<br /><br /><br />
<p class="api-tip">
    <i class="fa fa-hand-o-right"></i>
    <a href="http://developer.okta.com/docs/api/rest/groups.html#list-groups">
        This page gets a list of groups from Okta using the <code>/groups</code> Okta API endpoint.
    </a>
</p>