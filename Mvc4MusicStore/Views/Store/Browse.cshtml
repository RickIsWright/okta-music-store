@model Mvc4MusicStore.Models.Genre
@{
    ViewBag.Title = "Browse Albums";
}

<div class="genre">
    <h2>@Model.Name Albums</h2>

    <ul id="album-list">
        @foreach (var album in Model.Albums)
        {
            <li>
                <a href="@Url.Action("Details",
                    new { id = album.AlbumId })">
                    <img class="album" alt="@album.Title"
                         src="~/Content/Images/record-small.png" />
                    <span>@album.Title</span>
                </a>
            </li>
        }
    </ul>
</div>